<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dp" />
            <gradient
                android:angle="0"
                android:centerColor="#FF7E7E7E"
                android:centerY="0.5"
                android:endColor="#FF9D9D9D"
                android:startColor="#FF9D9D9D" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="#8064A4F4"
                    android:centerY="0.75"
                    android:endColor="#A064A4F4"
                    android:startColor="#8064A4F4" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dp" />
                <gradient
                    android:angle="0"
                    android:endColor="#EE287DF6"
                    android:startColor="#EE26AAFD" />
            </shape>
        </clip>
    </item>
</layer-list>