<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_bg"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/selector_common_item"
            android:padding="12dp">

            <!-- 头像 -->
            <com.shixincube.app.widget.AdvancedImageView
                android:id="@+id/ivAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="5dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/avatar_default"
                auto:corner_radius="6dp"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical">

                    <!-- 名称 -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/item_text"
                        android:textSize="16sp"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <!-- Cube ID -->
                <TextView
                    android:id="@+id/tvCubeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/my_cube_id"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:text="@string/nickname_colon"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"/>

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.shixincube.app.widget.optionitemview.OptionItemView
            android:id="@+id/oivRemarkAndTag"
            style="@style/OptionItem"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_common_item"
            auto:end_src="@mipmap/arrow_end"
            auto:start_text="@string/set_remark_and_tag"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llCountriesAndRegions"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_common_item"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1.5"
                android:text="@string/countries_and_regions"
                android:textColor="@color/text"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvCountriesAndRegions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="4"
                android:text="@string/china"
                android:textColor="@color/text_accent"
                android:textSize="16sp"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View style="@style/Line"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/llSignature"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/selector_common_item"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/signature"
                android:textColor="@color/text"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvSignature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="4"
                android:textColor="@color/text_accent"
                android:textSize="16sp"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:id="@+id/btnChat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_contact_details_send_message"
            android:text="@string/send_message"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnAddToContacts"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_contact_details_add_to_contacts"
            android:text="@string/add_to_contacts"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>