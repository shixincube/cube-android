<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorThemeBackground"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="?attr/colorThemeBackground"
            android:orientation="vertical">

            <com.shixincube.app.widget.AdvancedImageView
                android:id="@+id/aivPreview"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/avatar_default"
                auto:corner_radius="4dp"/>

        </LinearLayout>

        <View
            style="?attr/styleLine"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ibAvatar01"
                    android:tag="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_01"/>
                <ImageButton
                    android:id="@+id/ibAvatar02"
                    android:tag="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_02"/>
                <ImageButton
                    android:id="@+id/ibAvatar03"
                    android:tag="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_03"/>
                <ImageButton
                    android:id="@+id/ibAvatar04"
                    android:tag="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_04"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ibAvatar05"
                    android:tag="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_05"/>
                <ImageButton
                    android:id="@+id/ibAvatar06"
                    android:tag="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_06"/>
                <ImageButton
                    android:id="@+id/ibAvatar07"
                    android:tag="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_07"/>
                <ImageButton
                    android:id="@+id/ibAvatar08"
                    android:tag="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_08"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ibAvatar09"
                    android:tag="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_09"/>
                <ImageButton
                    android:id="@+id/ibAvatar10"
                    android:tag="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_10"/>
                <ImageButton
                    android:id="@+id/ibAvatar11"
                    android:tag="11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_11"/>
                <ImageButton
                    android:id="@+id/ibAvatar12"
                    android:tag="12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_12"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/ibAvatar13"
                    android:tag="13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_13"/>
                <ImageButton
                    android:id="@+id/ibAvatar14"
                    android:tag="14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_14"/>
                <ImageButton
                    android:id="@+id/ibAvatar15"
                    android:tag="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_15"/>
                <ImageButton
                    android:id="@+id/ibAvatar16"
                    android:tag="16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@null"
                    android:src="@mipmap/avatar_16"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>