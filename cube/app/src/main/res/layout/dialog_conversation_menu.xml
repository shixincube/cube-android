<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner_rect_solid_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTopConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectorOptionItem"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/conv_top"
            android:textColor="?attr/colorText"
            android:textSize="16sp"/>

        <View
            style="?attr/styleLine"/>

        <TextView
            android:id="@+id/tvDeleteConversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectorOptionItem"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:padding="20dp"
            android:text="@string/conv_delete"
            android:textColor="?attr/colorText"
            android:textSize="16sp"/>

    </LinearLayout>

</FrameLayout>