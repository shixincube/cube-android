<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llFileClassify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTabBackground">

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/llAllFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@drawable/shape_file_tab_pressed">

            <com.shixincube.app.widget.AdvancedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_folder"
                android:gravity="center"
                auto:corner_radius="0dp"/>

            <TextView
                android:id="@+id/tvAllFiles"
                android:tag="98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/all_files"
                android:textColor="?attr/colorButtonPrimaryText"
                android:textSize="11sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/llImageFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@drawable/shape_file_tab_normal">

            <com.shixincube.app.widget.AdvancedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_file_image"
                android:gravity="center"
                auto:corner_radius="0dp"/>

            <TextView
                android:id="@+id/tvImageFiles"
                android:tag="98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/file_image"
                android:textColor="?attr/colorButtonSecondaryText"
                android:textSize="11sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/llDocFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@drawable/shape_file_tab_normal">

            <com.shixincube.app.widget.AdvancedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_file_docx"
                android:gravity="center"
                auto:corner_radius="0dp"/>

            <TextView
                android:id="@+id/tvDocFiles"
                android:tag="98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/file_doc"
                android:textColor="?attr/colorButtonSecondaryText"
                android:textSize="11sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/llVideoFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@drawable/shape_file_tab_normal">

            <com.shixincube.app.widget.AdvancedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_file_video"
                android:gravity="center"
                auto:corner_radius="0dp"/>

            <TextView
                android:id="@+id/tvVideoFiles"
                android:tag="98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/file_video"
                android:textColor="?attr/colorButtonSecondaryText"
                android:textSize="11sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:id="@+id/llAudioFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            android:orientation="vertical"
            android:background="@drawable/shape_file_tab_normal">

            <com.shixincube.app.widget.AdvancedImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_file_music"
                android:gravity="center"
                auto:corner_radius="0dp"/>

            <TextView
                android:id="@+id/tvAudioFiles"
                android:tag="98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/file_audio"
                android:textColor="?attr/colorButtonSecondaryText"
                android:textSize="11sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.5"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorThemeBackground"
        android:padding="8dp"
        android:orientation="vertical">

        <!-- 当前路径 -->
        <TextView
            android:id="@+id/tvPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="middle"
            android:text="@string/app_name"
            android:textColor="?attr/colorTextSecondary"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNoFile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/strip_button_height"
            android:layout_marginStart="@dimen/item_margin_start_and_end"
            android:layout_marginEnd="@dimen/item_margin_start_and_end"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_primary_button"
            android:textColor="?attr/colorButtonPrimaryText"
            android:text="@string/upload_file"/>

    </LinearLayout>

    <com.shixincube.app.widget.recyclerview.RecyclerView
        android:id="@+id/rvFiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        auto:rv_divider_color="@color/line"
        auto:rv_divider_size="1dp"/>

</LinearLayout>