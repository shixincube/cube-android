<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/flToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/toolbar_bg">

            <ImageView
                android:id="@+id/ivToolbarNavigation"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@mipmap/ic_back" />

            <View
                android:id="@+id/vToolbarDivision"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/ivToolbarNavigation"
                android:background="@drawable/shape_vertical_line"
                android:visibility="visible" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/llToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/vToolbarDivision"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/toolbar_text"
                    android:textSize="20sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvToolbarSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbar_text"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoLinearLayout>

            <!-- 加号菜单 -->
            <ImageButton
                android:id="@+id/ibAddMenu"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/item_margin_left_and_right"
                android:background="@null"
                android:src="@mipmap/ic_add"
                android:visibility="gone" />

            <!-- 添加联系人 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/llToolbarAddContact"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:visibility="gone">

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/ivToolbarNavigation"
                    android:background="@drawable/shape_vertical_line"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvToolbarAddContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/add_contact"
                    android:textColor="@color/toolbar_text"
                    android:textSize="20sp" />
            </com.zhy.autolayout.AutoLinearLayout>

            <!-- 搜索 -->
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/llToolbarSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="66dp"
                android:layout_marginEnd="13dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etSearchContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@null"
                    android:drawableStart="@mipmap/ic_search"
                    android:drawablePadding="10dp"
                    android:hint="@string/search"
                    android:maxLines="1"
                    android:inputType="text"
                    android:autofillHints=""
                    android:textColor="@color/toolbar_text"
                    android:textColorHint="@color/gray1"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shape_bottom_theme" />
            </com.zhy.autolayout.AutoLinearLayout>

            <!-- 发送按钮 -->
            <Button
                android:id="@+id/btnToolbarSend"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="@drawable/selector_theme_btn"
                android:text="@string/send"
                android:textColor="@color/theme_blue"
                android:visibility="gone" />

            <!--更多按钮-->
            <ImageButton
                android:id="@+id/ibToolbarMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="@null"
                android:src="@mipmap/ic_contact_more"
                android:visibility="gone" />

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoFrameLayout>

</com.google.android.material.appbar.AppBarLayout>