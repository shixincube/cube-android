<?xml version="1.0" encoding="utf-8"?>
<com.shixincube.app.widget.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    auto:cardBackgroundColor="@color/popup_menu_bg"
    auto:cardElevation="5dp">

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0.5dp">

        <TextView
            android:id="@+id/tvCreateGroup"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="0.5dp"
            android:drawableStart="@mipmap/popup_create_group_chat"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/create_group"
            android:textColor="@color/popup_menu_text"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvAddContact"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="0.5dp"
            android:drawableStart="@mipmap/popup_add_contact"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/add_contact"
            android:textColor="@color/popup_menu_text"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvNewDir"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="0.5dp"
            android:drawableStart="@mipmap/popup_new_directory"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/new_dir"
            android:textColor="@color/popup_menu_text"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvFileUpload"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="0.5dp"
            android:drawableStart="@mipmap/popup_file_upload"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/upload_file"
            android:textColor="@color/popup_menu_text"
            android:textSize="14sp"/>

    </LinearLayout>

</com.shixincube.app.widget.AutoCardView>