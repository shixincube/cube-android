<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AdvancedImageView">
        <attr name="is_circle" format="boolean" />
        <attr name="is_cover_src" format="boolean" />
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_top_left_radius" format="dimension" />
        <attr name="corner_top_right_radius" format="dimension" />
        <attr name="corner_bottom_left_radius" format="dimension" />
        <attr name="corner_bottom_right_radius" format="dimension" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="inner_border_width" format="dimension" />
        <attr name="inner_border_color" format="color" />
        <attr name="mask_color" format="color" />
    </declare-styleable>

    <declare-styleable name="BubbleImageView">
        <attr name="bubble_arrowTop" format="dimension|reference" />
        <attr name="bubble_arrowWidth" format="dimension|reference" />
        <attr name="bubble_arrowHeight" format="dimension|reference" />
        <attr name="bubble_arrowOffset" format="dimension|reference" />
        <attr name="bubble_angle" format="dimension|reference" />
        <attr name="bubble_arrowLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="bubble_showText" format="boolean" />
        <attr name="bubble_showShadow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="OptionItemView">
        <attr name="title" format="string"/>
        <attr name="title_size" format="dimension"/>
        <attr name="title_color" format="color"/>
        <attr name="start_src" format="reference|color"/>
        <attr name="start_text" format="string"/>
        <attr name="start_text_size" format="dimension"/>
        <attr name="start_image_margin_left" format="dimension"/>
        <attr name="start_text_margin_left" format="dimension"/>
        <attr name="start_image_margin_right" format="dimension"/>
        <attr name="start_text_color" format="color"/>
        <attr name="end_src" format="reference|color"/>
        <attr name="end_text" format="string"/>
        <attr name="end_text_size" format="dimension"/>
        <attr name="end_image_margin_left" format="dimension"/>
        <attr name="end_image_margin_right" format="dimension"/>
        <attr name="end_text_margin_right" format="dimension"/>
        <attr name="end_text_color" format="color"/>
        <attr name="split_mode" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RecyclerView">
        <!-- RecyclerView 的类型 -->
        <attr name="rv_type" format="integer">
            <enum name="grid" value="0"/>
            <enum name="stagger" value="1"/>
        </attr>

        <!-- RecyclerView 的方向 -->
        <attr name="rv_orientation">
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>

        <!-- 网格或瀑布流的列数 -->
        <attr name="rv_column" format="integer"/>

        <!-- 下划线高度/宽度 -->
        <attr name="rv_divider_size" format="dimension"/>
        <!-- 下划线颜色 -->
        <attr name="rv_divider_color" format="color"/>
        <!-- 下划线图片 -->
        <attr name="rv_divider_drawable" format="reference"/>

        <!-- 是否开启默认动画 -->
        <attr name="rv_default_animator_open" format="boolean"/>
    </declare-styleable>
</resources>