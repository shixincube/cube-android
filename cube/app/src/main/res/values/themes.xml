<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CubeTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_blue_dark</item>
        <item name="colorSecondaryVariant">@color/theme_blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- 主题 -->
        <item name="colorToolbarText">@color/toolbar_text</item>
        <item name="colorToolbarTextHint">@color/hint</item>
        <item name="colorToolbarBackground">@color/toolbar_bg</item>
        <item name="mipmapToolbarNavigation">@mipmap/ic_back_black</item>
        <item name="mipmapToolbarPopup">@mipmap/ic_popup_black</item>
        <item name="mipmapToolbarMore">@mipmap/ic_more_black</item>

        <item name="colorTabNormal">@color/tab_normal</item>
        <item name="colorTabPressed">@color/tab_pressed</item>
        <item name="colorTabBackground">@color/tab_bg</item>
        <item name="mipmapTabConversationNormal">@mipmap/tab_conversation_normal</item>
        <item name="mipmapTabConversationPressed">@mipmap/tab_conversation_pressed</item>
        <item name="mipmapTabFilesNormal">@mipmap/tab_files_normal</item>
        <item name="mipmapTabFilesPressed">@mipmap/tab_files_pressed</item>
        <item name="mipmapTabContactsNormal">@mipmap/tab_contacts_normal</item>
        <item name="mipmapTabContactsPressed">@mipmap/tab_contacts_pressed</item>
        <item name="mipmapTabProfileNormal">@mipmap/tab_profile_normal</item>
        <item name="mipmapTabProfilePressed">@mipmap/tab_profile_pressed</item>

        <item name="colorLine">@color/line</item>
        <item name="styleLine">@style/Line</item>

        <item name="colorTheme">@color/theme</item>
        <item name="colorThemeActive">@color/theme_light</item>
        <item name="colorThemeBackground">@color/theme_bg</item>
        <item name="colorThemeBackgroundAccent">@color/theme_accent_bg</item>
        <item name="colorText">@color/text</item>
        <item name="colorTextSecondary">@color/text_secondary</item>
        <item name="colorBackground">@color/background</item>
        <item name="colorBackgroundAccent">@color/background_accent</item>
        <item name="colorBackgroundPressed">@color/background_pressed</item>

        <item name="colorButtonPrimaryText">@color/button_primary_text</item>
        <item name="colorButtonSecondary">@color/button_secondary</item>
        <item name="colorButtonSecondaryText">@color/button_secondary_text</item>
        <item name="colorButtonSecondaryPressed">@color/button_secondary_pressed</item>

        <item name="selectorOptionItem">@drawable/selector_option_item</item>
        <item name="colorOptionItem">@color/background</item>
        <item name="colorItemIndexBackground">@color/item_index_bg</item>

        <item name="colorMessageBarBackground">@color/message_bar_bg</item>
        <item name="colorMessageBoxSelfText">@color/message_box_self_text</item>
        <item name="colorMessageBoxSelfBG">@color/message_box_self_bg</item>
        <item name="colorMessageBoxPartnerText">@color/message_box_partner_text</item>
        <item name="colorMessageBoxPartnerBG">@color/message_box_partner_bg</item>

        <!-- Activity 切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <!-- Customize material dialog  -->
        <item name="material_dialog_background">@color/theme_bg</item>
        <item name="material_dialog_title_text_color">@color/black</item>
        <item name="material_dialog_message_text_color">@color/text</item>
        <item name="material_dialog_positive_button_color">@color/theme_blue</item>
        <item name="material_dialog_positive_button_text_color">@color/white</item>
        <item name="material_dialog_negative_button_text_color">@color/text_accent</item>
    </style>

    <!-- Animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="toolbarMessagePanelMoreIcon">
        <item name="android:background">@mipmap/ic_contact_info_black</item>
    </style>
</resources>