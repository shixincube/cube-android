<?xml version="1.0" encoding="utf-8"?>
<cube.engine.ui.KeyEventLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/llMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@mipmap/window_background">

        <!-- 顶部工具栏 -->
        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnPreview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_switch_preview"/>

        </LinearLayout>

        <!-- 中间视频和头像区域 -->
        <LinearLayout
            android:id="@+id/llBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <cube.engine.ui.AdvancedImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/avatar"
                    auto:corner_radius="3dp" />

                <cube.engine.ui.AdvancedImageView
                    android:id="@+id/ivType"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_audio_call"
                    android:visibility="gone"
                    auto:corner_radius="3dp"/>

            </RelativeLayout>

            <org.webrtc.SurfaceViewRenderer
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="@string/cube_default_contact_name"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="@color/gray"
                android:text="@string/calling"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 底部操作栏 -->
        <LinearLayout
            android:id="@+id/llFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.75"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llMicrophone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnMicrophone"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/selector_microphone"
                    android:src="@null"/>
                <TextView
                    android:id="@+id/tvMicrophone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/enabled"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnHangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:background="@color/transparent"
                android:src="@drawable/selector_hang_up"/>

            <LinearLayout
                android:id="@+id/llSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnSpeaker"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/selector_speaker"
                    android:src="@null"/>
                <TextView
                    android:id="@+id/tvSpeaker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/receiver"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</cube.engine.ui.KeyEventLinearLayout>