    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/window_background">

    </LinearLayout>

</LinearLayout>